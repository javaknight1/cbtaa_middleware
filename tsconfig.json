{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "baseUrl": "src",
        "outDir": "dist"
    },
    "lib": [
        "es2015"
    ],
    "include": [
        "./**/*.ts",
        ".env"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}